<h1> Log in </h1>
<%= form_tag login_path do %>
    <p>
        <%= label_tag :username %>:<br/>
        <%= text_field_tag :username %>
    </p>
    <p>
        <%= label_tag :password %>:<br/>
        <%= password_field_tag :password %>
    </p>
    <p>
        <%= submit_tag 'Log in' %>
    </p>

<p>New user? <%= link_to "Sign up", signup_path %></p>
<% end %>