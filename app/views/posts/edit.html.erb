<h1>Edit Post</h1>

<%= form_for @post do |f| %>
    <p>
        <%= f.label :subject %>:<br />
        <%= f.text_field :subject %>
    </p>
    <p>
        <%= f.label :image %><br/>
        <%= f.file_field :image %>
    </p>     
    <p>
        <%= f.label :caption %><br/>
        <%= f.text_field :caption %>
    </p>
    <p>
        <%= f.label :body %>:<br />
        <%= f.text_area :body %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>

<%= link_to 'Delete post', @post, { method: 'delete', data: {confirm: 'Are you sure?'}} %>