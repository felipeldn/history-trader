<h1>Edit Post</h1>

<%= form_for @post do |f| %>
    <p>
        <%= f.label :subject %>:<br />
        <%= f.text_field :subject %>
    </p>   
    <p>
        <%= f.label :img_url %><br/>
        <%= f.text_field :img_url %>
    </p>
    <p>
        <%= f.label :body %>:<br />
        <%= f.text_area :body %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>

<%= link_to 'Delete post', @post, { method: 'delete', data: {confirm: 'Are you sure?'}} %>