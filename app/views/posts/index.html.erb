<div class="col-xs-1" align="center">
<h2> My Posts <h2>
<br>
<p><% if @current_user.posts.count < 1 %>

    <%= link_to "Click here to create your first post", new_post_path %>
<%else%>
<% @current_user.posts.each do |post| %>
  
    <h2><%=link_to post.subject, post%> - <%=link_to "Edit Post", edit_post_path(post)%> - <%= link_to "Delete Post", post_path(post), method: :delete, data: {confirm: "Are you sure?"}%></h2> 
    
    <% end %>
<p><%= link_to "Add a New Post", new_post_path %></p>
<% end %>
</div>