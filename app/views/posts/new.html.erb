<h2> Create A New Post </h2>

<% if @post.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@post.errors.count, "error") %></h2>
    <ul>
        <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @post do |f| %>
    <p>
        <%= f.label :subject %>:<br/>
        <%= f.text_field :subject %>
    </p>   
    <p>
        <%= f.label :img_url %><br/>
        <%= f.text_field :img_url %>
    </p>
    <p>
        <%= f.label :body %>:<br/>
        <%= f.text_area :body %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>